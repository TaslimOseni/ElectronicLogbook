<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.fragments.SignUpInitialFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000000"
            android:layout_weight="1">

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#DDDDDD"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:id="@+id/back"
        android:src="@drawable/back"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingTop="15dp"
        android:gravity="center"
        android:id="@+id/header"
        android:textSize="23sp"
        android:layout_toEndOf="@+id/back"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/student"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Full name"
                    android:id="@+id/stud_fullname"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/stud_email"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/stud_matricnumber"
                    android:hint="Matric number"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Level"
                    android:id="@+id/stud_level"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:hint="Faculty"
                    android:id="@+id/stud_faculty"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Department"
                    android:id="@+id/stud_dept"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>


                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#000000"
                    android:id="@+id/stud_next"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/ind_supervisor"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Full name"
                    android:id="@+id/ind_name"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="15dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Email"
                    android:id="@+id/ind_email"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Phone number"
                    android:id="@+id/ind_phone"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Rank"
                    android:id="@+id/ind_rank"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Staff ID"
                    android:id="@+id/ind_staffID"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>


                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/ind_next"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#000000"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/dept_supervisor"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Full name"
                    android:id="@+id/dept_name"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="15dp"/>


                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Email"
                    android:id="@+id/dept_email"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/dept_faculty"
                    android:hint="Faculty"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/dept_dept"
                    android:hint="Department"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/dept_staffID"
                    android:hint="Staff ID"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:padding="7dp"
                    android:layout_marginTop="10dp"/>


                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:id="@+id/dept_next"
                    app:cardBackgroundColor="#000000"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:textSize="15sp"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>


</RelativeLayout>